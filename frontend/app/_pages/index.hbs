<!doctype html>
<html class="no-js" lang="" ng-app="flexApp">
  <head>
    <meta charset="utf-8">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Flex Booking App</title>
    <meta name="description" content="description">
    <meta name="keywords" content="jgatjens, webapp, templates, es6">
    <meta name="author" content="project name">

    <!-- Place favicon.ico and apple-touch-icon(s) in the root directory -->
    <link rel="icon" type="image/vnd.microsoft.icon" href="img/favicon.ico" />

    <!-- build:css styles/vendor.css -->
    <!-- bower:css -->
    <!-- endbower -->
    <!-- endbuild -->

    <!-- build:css styles/main.css -->
    <link rel="stylesheet" href="styles/main.css">
    <!-- endbuild -->

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/material-design-iconic-font/2.2.0/css/material-design-iconic-font.min.css">
    <link rel="stylesheet" href="/bower_components/animate.css/animate.min.css">

    <!-- build:js scripts/vendor/modernizr.js -->
    <script src="/bower_components/modernizr/modernizr.js"></script>
    <!-- endbuild -->
  </head>
  <body ng-controller="appController">
    <!--[if lt IE 10]>
      <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->
    <nav class="navbar-vertical navbar-default text-center animated slideInLeft">
      <a class="box logo" ui-sref="home.search">
        <img alt="Flex" src="images/flex.jpg">
      </a>
      <a class="box" ng-show="!auth" href="#" data-toggle="modal" data-target="#login"><i class="zmdi zmdi-sign-in"></i>&nbsp;Login</a>
      <a class="box" ng-show="auth" ng-click="logout()"><i class="zmdi zmdi-sign-in"></i>&nbsp;Logout</a>
      <div class="box" ng-show="!auth">
        Welcome Adrian
      </div>
    </nav>

    <div class="wrapper">
      <div class="container-fluid animated fadeInDown">
        <div ui-view></div>
      </div>
    </div>

    <div class="modal fade" tabindex="-1" role="dialog" id="login">
      <div class="modal-dialog modal-sm">
        <form class="modal-content" name="loginForm" ng-submit="login()">
          <div class="modal-header">
            <div class="text-center"><i class="zmdi zmdi-sign-in"></i> Login</div>
          </div>
          <div class="modal-body">
            <label class="control-label"><i class="zmdi zmdi-account"></i> Username</label>
            <div class="form-group">
              <input type="text" name="username" ng-model="username" class="form-control input-lg" required>
              <div class="help-block" ng-show="loginForm.username.$touched && loginForm.username.$invalid">
                <small class="text-danger">Username is required</small>
              </div>
            </div>
            <label class="control-label"><i class="zmdi zmdi-lock"></i> Password</label>
            <div class="form-group">
              <input type="password" name="password" ng-model="password" class="form-control input-lg" required>
              <div class="help-block" ng-show="loginForm.password.$touched && loginForm.password.$invalid">
                <small class="text-danger">Password is required</small>
              </div>
            </div>
            <div ng-show="message" class="text-danger small">
              Credentials not match
            </div>
            <p class="text-right">
              <button type="submit" class="btn btn-primary" ng-disabled="loginForm.username.$dirty && loginForm.username.$invalid ||  
loginForm.password.$dirty && loginForm.password.$invalid">Login</button>
            </p>
          </div>
        </form>
      </div>
    </div>

    {{> scripts }}

  </body>
</html>
